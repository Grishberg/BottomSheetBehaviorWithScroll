<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/bottomSheetPanel"
             xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="430dp"
             android:orientation="vertical"
             app:behavior_hideable="false"
             app:behavior_peekHeight="86dp"
             app:layout_behavior="com.grishberg.coordinatorlayoutmenu.widgets.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/address_bar_layout"/>

            <include layout="@layout/widgets_layout"/>

            <include layout="@layout/menu_list_recyclerview"/>

        </FrameLayout>

    </LinearLayout>


</FrameLayout>